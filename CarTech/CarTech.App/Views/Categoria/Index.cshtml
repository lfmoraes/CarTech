@model List<CategoriaViewModel>
@{
    ViewData["Title"] = "Categorias";
}

<!-- Start content -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead>
                                <tr>
                                    <th>Código</th>
                                    <th>Descrição</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Descricao</td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary" title="Editar" onclick='categoria.open(@item.Id)'><i class="fa fa-pencil-alt"></i></button>
                                            <button class="btn btn-sm btn-outline-danger" title="Excluir" onclick='cadastros.excluir("Categoria", @item.Id)'><i class="fa fa-trash"></i></button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @*<a class="float" data-toggle="modal" data-target="#mdlCadCategoria">
                            <i class="fa fa-plus my-float"></i>
                        </a>*@
                        <a class="float" onclick='categoria.open()'><i class="fa fa-plus my-float"></i></a>
                    </div>
                </div>
            </div> <!-- end col -->
        </div>
        <!-- end row -->
    </div>
    <!-- container-fluid -->

</div>
<!-- content -->

@await Html.PartialAsync("Modal")


