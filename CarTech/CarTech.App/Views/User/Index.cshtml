@model List<UserViewModel>
@{
    ViewData["Title"] = "Usuários";
}

<!-- Start content -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead>
                                <tr>
                                    <th>Código</th>
                                    <th>Nome</th>
                                    <th>Email</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.UserName</td>
                                    <td>@item.Email</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary" title="Editar" onclick='modal.open("User", "@item.Id")'><i class="fa fa-pencil-alt"></i></button>
                                        <button class="btn btn-sm btn-outline-danger" title="Excluir" onclick='cadastros.excluir("User", "@item.Id")'><i class="fa fa-trash"></i></button>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                        <a class="float" onclick='modal.open("User")'><i class="fa fa-plus my-float"></i></a>
                    </div>
                </div>
            </div> <!-- end col -->
        </div>
        <!-- end row -->
    </div>
    <!-- container-fluid -->

</div>
<!-- content -->

@await Html.PartialAsync("Modal")


